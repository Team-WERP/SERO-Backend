<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.werp.sero.client.query.dao.ClientItemPriceHistoryMapper">

    <!-- ResultMap 정의 -->
    <resultMap id="clientItemPriceHistoryResultMap" type="com.werp.sero.client.query.dto.ClientItemPriceHistoryResponseDTO">
        <id property="id" column="id"/>
        <result property="unitPrice" column="unit_price"/>
        <result property="contractPrice" column="contract_price"/>
        <result property="reason" column="reason"/>
        <result property="name" column="name"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 고객사별 품목 가격 이력 조회 (최신순) -->
    <select id="findByClientIdAndClientItemIdOrderByCreatedAtDesc" resultMap="clientItemPriceHistoryResultMap">
        SELECT
            id,
            unit_price,
            contract_price,
            reason,
            name,
            status,
            created_at
        FROM client_item_price_history
        WHERE client_id = #{clientId}
          AND client_item_id = #{clientItemId}
        ORDER BY created_at DESC
    </select>

</mapper>
