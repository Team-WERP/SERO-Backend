<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.werp.sero.order.query.dao.SOMapper">

    <resultMap id="SODetailResultMap" type="com.werp.sero.order.query.dto.SODetailsResponseDTO">
        <id property="orderId" column="order_id"/>
        <result property="orderCode" column="so_code"/>
        <result property="orderedAt" column="ordered_at"/>
        <result property="shippedAt" column="shipped_at"/>
        <result property="totalQuantity" column="total_quantity"/>
        <result property="orderUrl" column="so_url"/>
        <result property="approvalCode" column="approval_code"/>
        <result property="note" column="note"/>
        <result property="clientName" column="company_name"/>
        <result property="clientManagerName" column="client_manager_name"/>
        <result property="clientManagerContact" column="client_manager_contact"/>
        <result property="managerName" column="manager_name"/>
        <result property="creditLimit" column="credit_limit"/>
        <result property="availablePrice" column="available_price"/>
        <result property="totalPrice" column="total_price"/>
        <result property="remainingAmount" column="remaining_amount"/>

        <collection property="items" ofType="com.werp.sero.order.query.dto.SOItemResponseDTO">
            <id property="id" column="item_id"/>
            <result property="itemCode" column="item_code"/>
            <result property="itemName" column="item_name"/>
            <result property="spec" column="spec"/>
            <result property="quantity" column="quantity"/>
            <result property="availableStock" column="available_stock"/>
            <result property="productionRequest" column="production_request"/>
            <result property="unit" column="unit"/>
            <result property="unitPrice" column="unit_price"/>
            <result property="totalPrice" column="item_total_price"/>
            <result property="salesOrderId" column="order_id"/>
        </collection>
    </resultMap>

    <select id="selectOrderDetailWithItems" resultMap="SODetailResultMap">
        SELECT
            A.id AS order_id,
            A.so_code,
            A.ordered_at,
            A.shipped_at,
            A.total_quantity,
            A.so_url,
            A.approval_code,
            A.note,
            A.total_price,

            B.company_name,
            B.credit_limit,
            (B.credit_limit - B.receivables) AS available_price,
            ((B.credit_limit - B.receivables) - A.total_price) AS remaining_amount,

            C.name AS client_manager_name,
            C.contact AS client_manager_contact,

            G.name AS manager_name,

            D.id AS item_id,
            D.item_code,
            D.item_name,
            D.spec,
            D.quantity,
            D.unit,
            D.unit_price,
            D.total_price AS item_total_price,

            (SELECT IFNULL(SUM(F.available_stock), 0)
             FROM warehouse_stock F
                      INNER JOIN material E ON F.material_id = E.id
             WHERE E.material_code = D.item_code) AS available_stock,

            GREATEST(D.quantity - (SELECT IFNULL(SUM(F.available_stock), 0)
                                   FROM warehouse_stock F
                                            INNER JOIN material E ON F.material_id = E.id
                                   WHERE E.material_code = D.item_code), 0) AS production_request

        FROM sales_order A
                 INNER JOIN client B ON A.client_id = B.id
                 INNER JOIN client_employee C ON A.client_manager_id = C.id
                 LEFT JOIN employee G ON A.manager_id = G.id
                 LEFT JOIN sales_order_item D ON A.id = D.so_id
        WHERE A.id = #{orderId}
        ORDER BY D.id ASC
    </select>
</mapper>